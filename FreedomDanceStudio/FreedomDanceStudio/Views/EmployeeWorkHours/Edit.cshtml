@model EmployeeWorkHours
@{
    ViewData["Title"] = $"Редактировать рабочее время для {Model.Employee?.FirstName}";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <form asp-action="Edit" method="post" class="needs-validation" novalidate>
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="EmployeeId" />

        <div class="mb-3">
            <label asp-for="WorkDate" class="form-label"></label>
            <input asp-for="WorkDate"
                   type="date"
                   class="form-control"
                   value="@(Model.WorkDate == DateTime.MinValue ? DateTime.UtcNow.Date.ToString("yyyy-MM-dd") : Model.WorkDate.ToUniversalTime().ToString("yyyy-MM-dd"))"
                   required />
            <span asp-validation-for="WorkDate" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="VisitsCount" class="form-label"></label>
            <input asp-for="VisitsCount" type="number" class="form-control" min="0" max="100" required />
            <span asp-validation-for="VisitsCount" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="HoursCount" class="form-label"></label>
            <input asp-for="HoursCount" type="number" step="0.5" class="form-control" min="0" max="24" required />
            <span asp-validation-for="HoursCount" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Сохранить изменения</button>
        <a asp-action="Index" class="btn btn-secondary">Отмена</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
