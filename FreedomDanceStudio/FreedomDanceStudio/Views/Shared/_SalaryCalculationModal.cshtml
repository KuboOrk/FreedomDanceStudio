@model EmployeeSalaryCalculation

<div class="modal fade" id="salaryCalculationModal" tabindex="-1" aria-labelledby="salaryModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="salaryModalLabel">Расчёт зарплаты для @ViewBag.EmployeeName</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="salaryCalculationForm">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Начало периода</label>
                            <input type="date" class="form-control"
                                   asp-for="StartDate"
                                   value="@(Model.StartDate != DateTime.MinValue ? Model.StartDate.ToLocalTime().ToString("yyyy-MM-dd") : "")"
                                   required />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Конец периода</label>
                            <input type="date" class="form-control"
                                   asp-for="EndDate"
                                   value="@(Model.EndDate != DateTime.MinValue ? Model.EndDate.ToLocalTime().ToString("yyyy-MM-dd") : "")"
                                   required />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Сотрудник</label>
                        <select class="form-select" asp-for="EmployeeId" id="employeeSelect" required>
                            <option value="">-- Выберите сотрудника --</option>
                        </select>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Тип оплаты</label>
                            <select class="form-select" asp-for="PaymentType" id="paymentType">
                                <option value="Hourly">За час</option>
                                <option value="PerVisit">За посещение</option>
                                <option value="Percentage">Процент от дохода</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Ставка за час</label>
                            <input type="number" class="form-control" step="0.01"
                                   asp-for="HourlyRate" required />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Всего часов</label>
                            <input type="number" class="form-control" step="0.1"
                                   asp-for="TotalHours"
                                   min="0"
                                   placeholder="Введите количество часов"
                                   required />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Всего посещений</label>
                            <input type="number" class="form-control"
                                   asp-for="TotalVisits"
                                   min="0"
                                   placeholder="Введите количество посещений"
                                   required />
                        </div>
                    </div>

                    <div id="percentageSection" class="mb-3" style="display:none;">
                        <label class="form-label">Процентная ставка</label>
                        <input type="number" class="form-control" step="0.0001"
                               asp-for="PercentageRate" placeholder="0.10 = 10%" />
                    </div>

                    <hr />
                    <div class="d-flex justify-content-between">
                        <strong>Итог:</strong>
                        <span id="calculatedAmount" class="h5">@Model.CalculatedAmount.ToString("C")</span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Создать транзакцию</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                </div>
            </form>
        </div>
    </div>
</div>
