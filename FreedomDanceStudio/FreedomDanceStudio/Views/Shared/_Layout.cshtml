<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - FREEDOM</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Наши стили -->
    <link rel="stylesheet" href="~/css/site.css"/>
    <!-- иконки перед текстом кнопок -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</head>
<body>
<!-- Шапка сайта -->
<nav class="navbar navbar-expand-lg navbar-custom fixed-top">
    <div class="container">
        <!-- Логотип слева -->
        <a class="navbar-brand logo" asp-controller="Home" asp-action="Index">
            FREEDOM<span>Dance</span>
        </a>

        <!-- НАВИГАЦИОННОЕ МЕНЮ -->
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-house me-1"></i> Главная
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Clients" asp-action="Index">
                        <i class="bi bi-people me-1"></i> Клиенты
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="AbonnementSales" asp-action="Index">
                        <i class="bi bi-cart me-1"></i> Продажи абонементов
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Services" asp-action="Index">
                        <i class="bi bi-tags me-1"></i> Услуги
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Employees" asp-action="Index">
                        <i class="bi bi-person-badge me-1"></i> Сотрудники
                    </a>
                </li>
            </ul>
        </div>

        <!-- Кнопка авторизации справа -->
        <div class="ms-auto">
            @if (User.Identity?.IsAuthenticated == true)
            {
                <span class="me-3">Привет, @User.Identity.Name!</span>
                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-outline-danger btn-sm">
                        Выйти
                    </button>
                </form>
            }
            else
            {
                <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-sm">Войти</a>
            }
        </div>
    </div>
</nav>

<!-- Основной контент -->
<main class="container-fluid">
    @RenderBody()
</main>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
@await RenderSectionAsync("Scripts", required: false)

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const currentUrl = window.location.pathname;
        const navLinks = document.querySelectorAll('.nav-link');

        navLinks.forEach(link => {
            if (link.getAttribute('href') === currentUrl) {
                link.classList.add('active');
            }
        });
    });
</script>
</body>
</html>
