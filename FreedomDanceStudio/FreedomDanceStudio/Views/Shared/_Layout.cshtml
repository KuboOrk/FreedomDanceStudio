<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - FREEDOM</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Наши стили -->
    <link rel="stylesheet" href="~/css/site.css"/>
    <!-- иконки -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

    <!-- Секция для дополнительных стилей из представлений -->
    @RenderSection("Styles", required: false)
</head>
<body>
<!-- Кнопка-переключатель для сайдбара -->
<button class="toggle-btn" id="sidebarToggle">
    <i class="bi bi-list"></i>
</button>

<!-- Шапка сайта (только авторизация) -->
<nav class="navbar navbar-expand-lg navbar-custom fixed-top">
    <div class="container">
        <!-- Логотип слева -->
        <a class="navbar-brand logo" asp-controller="Home" asp-action="Index">
            FREEDOM<span>Dance</span>
        </a>

        <!-- Блок авторизации/профиля -->
        <div class="ms-auto">
            @if (User.Identity?.IsAuthenticated == true)
            {
                <!-- Выпадающее меню профиля -->
                <div class="dropdown d-inline-block">
                    <button class="btn btn-outline-secondary dropdown-toggle"
                            type="button" id="profileDropdown"
                            data-bs-toggle="dropdown">
                        <i class="bi bi-person-circle me-1"></i>
                        @User.Identity.Name
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li>
                            <a class="dropdown-item" asp-controller="Profile" asp-action="Index">
                                <i class="bi bi-person me-1"></i> Мой профиль
                            </a>
                        </li>

                        <!-- Кнопка для администраторов -->
                        @if (User.IsInRole("Admin"))
                        {
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item" asp-controller="Admin" asp-action="Users">
                                    <i class="bi bi-people me-1"></i> Управление пользователями
                                </a>
                            </li>
                        }

                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="dropdown-item">
                                    <i class="bi bi-box-arrow-right me-1"></i> Выйти
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            }
            else
            {
                <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-sm">Войти</a>
            }
        </div>
    </div>
</nav>

<!-- Сайдбар с меню -->
<div class="sidebar" id="sidebar">
    <ul class="nav flex-column">
        <li class="nav-item">
            <a class="nav-link" asp-controller="Home" asp-action="Index">
                <i class="bi bi-house me-1"></i> Главная
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="Clients" asp-action="Index">
                <i class="bi bi-people me-1"></i> Клиенты
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="AbonnementSales" asp-action="Index">
                <i class="bi bi-cart me-1"></i> Продажи абонементов
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="Services" asp-action="Index">
                <i class="bi bi-tags me-1"></i> Услуги
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="Employees" asp-action="Index">
                <i class="bi bi-person-badge me-1"></i> Сотрудники
            </a>
        </li>
        <li>
            <a class="nav-link" asp-controller="Finance" asp-action="Index">
                <i class="bi bi-currency-exchange me-2"></i>
                Финансы
            </a>
        </li>
    </ul>
</div>

<!-- Основной контент -->
<main class="container-fluid main-content" id="mainContent">
    @RenderBody()
</main>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
@await RenderSectionAsync("Scripts", required: false)
<script src="~/js/site.js"></script>
</body>
</html>
