@model AbonnementSale
@{
    ViewData["Title"] = "Продажа абонемента";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <form method="post">
        <div class="row">
            <div class="col-md-6">
                <!-- Поле выбора клиента -->
                <div class="mb-3">
                    <label asp-for="ClientId" class="form-label">Клиент</label>
                    <select asp-for="ClientId" asp-items="ViewBag.Clients"
                            class="form-select" required>
                        <option value="">-- Выберите клиента --</option>
                    </select>
                    <span asp-validation-for="ClientId" class="text-danger"></span>
                </div>

                <!-- Поле выбора услуги -->
                <div class="mb-3">
                    <label asp-for="ServiceId" class="form-label">Тип абонемента</label>
                    <select asp-for="ServiceId" asp-items="ViewBag.Services"
                            class="form-select" required id="ServiceSelect">
                        <option value="">-- Выберите услугу --</option>
                    </select>
                    <span asp-validation-for="ServiceId" class="text-danger"></span>
                </div>

                <!-- Дата продажи (фиксирована на сегодня) -->
                <div class="mb-3">
                    <label asp-for="SaleDate" class="form-label">Дата продажи</label>
                    <input asp-for="SaleDate" type="date" class="form-control"
                           asp-format="{0:yyyy-MM-dd}"
                           value="@DateTime.UtcNow.Date.ToString("yyyy-MM-dd")" readonly/>
                    <span asp-validation-for="SaleDate" class="text-danger"></span>
                </div>

                <!-- Блок с информацией о выбранной услуге -->
                <div id="ServiceInfo" class="alert alert-info mb-3" style="display:none;">
                    <strong>Выбрана услуга:</strong> <span id="ServiceNameDisplay"></span><br>
                    <strong>Цена:</strong> <span id="PriceDisplay"></span> ₽<br>
                    <strong>Срок действия:</strong> <span id="DurationDisplay"></span> дней
                </div>

                <!-- Начало действия (фиксировано на сегодня) -->
                <div class="mb-3">
                    <label class="form-label">Начало действия</label>
                    <input type="text" class="form-control" readonly
                           value="@DateTime.UtcNow.Date.ToString("dd.MM.yyyy")"/>
                    <!-- Скрытое поле для передачи StartDate в контроллер -->
                    <input asp-for="StartDate" type="hidden"
                           value="@DateTime.UtcNow.Date.ToString("yyyy-MM-dd")"/>
                </div>

                <!-- Окончание действия (рассчитывается автоматически) -->
                <div class="mb-3">
                    <label class="form-label">Окончание действия</label>
                    <!-- Видимое поле для пользователя (формат дд.мм.гггг) -->
                    <input type="text" class="form-control" readonly
                           id="EndDateDisplay"
                           placeholder="Выберите услугу для расчёта"/>
                    <!-- Скрытое поле для передачи EndDate в контроллер (формат yyyy-MM-dd) -->
                    <input asp-for="EndDate" type="hidden" id="EndDateHidden"/>
                    <small class="text-muted">Рассчитывается автоматически при выборе услуги</small>
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Оформить продажу</button>
                <a asp-action="Index" class="btn btn-secondary">Отмена</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const serviceSelect = document.getElementById('ServiceSelect');
            const endDateDisplay = document.getElementById('EndDateDisplay');
            const endDateHidden = document.getElementById('EndDateHidden');
            const serviceInfo = document.getElementById('ServiceInfo');
            const serviceNameDisplay = document.getElementById('ServiceNameDisplay');
            const priceDisplay = document.getElementById('PriceDisplay');
            const durationDisplay = document.getElementById('DurationDisplay');

            serviceSelect.addEventListener('change', async function() {
                const serviceId = this.value;

                if (!serviceId) {
                    serviceInfo.style.display = 'none';
                    endDateDisplay.value = '';
                    endDateHidden.value = '';
                    return;
                }

                try {
                    const response = await fetch(`/AbonnementSales/GetServiceDuration?serviceId=${serviceId}`);
                    if (!response.ok) throw new Error('Ошибка сети');


                    const data = await response.json();

                    // Заполняем информацию об услуге
                    serviceNameDisplay.textContent = data.serviceName;
                    priceDisplay.textContent = data.price;
                    durationDisplay.textContent = data.durationDays;
                    serviceInfo.style.display = 'block';


                    // Рассчитываем дату окончания в ISO‑формате (yyyy-MM-dd)
                    const startDate = new Date('@DateTime.UtcNow.Date.ToString("yyyy-MM-dd")');
                    const endDate = new Date(startDate);
                    endDate.setDate(startDate.getDate() + data.durationDays);

                    // Форматируем для отображения (дд.мм.гггг)
                    const day = String(endDate.getDate()).padStart(2, '0');
                    const month = String(endDate.getMonth() + 1).padStart(2, '0');
                    const year = endDate.getFullYear();
                    endDateDisplay.value = `${day}.${month}.${year}`;


                    // Устанавливаем скрытое поле в ISO‑формате для отправки в контроллер
                    endDateHidden.value = endDate.toISOString().split('T')[0];
                } catch (error) {
                    console.error('Ошибка при получении данных:', error);
                    alert('Не удалось загрузить данные услуги. Проверьте подключение к сети.');
                    endDateDisplay.value = 'Ошибка загрузки';
                    serviceInfo.style.display = 'none';
                }
            });
        });
    </script>
}
