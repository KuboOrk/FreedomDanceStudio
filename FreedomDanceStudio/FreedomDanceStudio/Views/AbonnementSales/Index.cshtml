@model IEnumerable<AbonnementSale>
@{
    ViewData["Title"] = "Продажи абонементов";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <a asp-action="Create" class="btn btn-primary mb-3">Добавить продажу</a>

    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Клиент</th>
            <th>Абонемент</th>
            <th>Дата продажи</th>
            <th>Начало</th>
            <th>Окончание</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var sale in Model)
        {
            <tr>
                <td>@sale.Client?.FirstName @sale.Client?.LastName</td>
                <td>@sale.Service?.Name</td>
                <td>@sale.SaleDate.ToShortDateString()</td>
                <td>@sale.StartDate.ToShortDateString()</td>
                <td>@sale.EndDate.ToShortDateString()</td>
                <td>
                    <!-- Здесь можно добавить кнопки редактирования/удаления -->
                    <a asp-action="Edit" asp-route-id="@sale.Id" class="btn btn-sm btn-outline-primary">Редактировать</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
