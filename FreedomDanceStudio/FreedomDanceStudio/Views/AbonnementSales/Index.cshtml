@model IEnumerable<AbonnementSale>
@{
    ViewData["Title"] = "Список продаж абонементов";
}

<div class="container mt-4">
    <!-- КОНТЕЙНЕР ДЛЯ ВСПЛЫВАЮЩИХ УВЕДОМЛЕНИЙ -->
    <div aria-live="polite" aria-atomic="true" class="position-fixed bottom-0 end-0 p-3" style="z-index: 1070;">
        <div id="liveToastContainer"></div>
    </div>

    <!-- Генерация уведомлений из TempData -->
    @if (TempData["EditError"] != null)
    {
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                showToast('Ошибка', '@Html.Raw(TempData["EditError"].ToString())', 'danger');
            });
        </script>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                showToast('Успех', '@Html.Raw(TempData["SuccessMessage"].ToString())', 'success');
            });
        </script>
    }

    @if (TempData["WarningMessage"] != null)
    {
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                showToast('Внимание', '@Html.Raw(TempData["WarningMessage"].ToString())', 'warning');
            });
        </script>
    }

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>@ViewData["Title"]</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-person-plus me-1"></i> Новая продажа
        </a>
    </div>

    <!-- Таблица с продажами -->
    <table class="table table-striped">
        <thead>
        <tr>
            <th>№</th>
            <th>Клиент</th>
            <th>Услуга</th>
            <th>Дата продажи</th>
            <th>Начало действия</th>
            <th>Окончание действия</th>
            <th>Посещения</th> <!-- КОЛОНКА С ПОСЕЩЕНИЯМИ -->
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr data-max-visits="@item.MaxVisits" data-visit-count="@(item.Visits?.Count ?? 0)">
                <td>@item.Id</td>
                <td>
                    @if (item.Client != null)
                    {
                        @item.Client.FirstName @item.Client.LastName
                    }
                    else
                    {
                        <span class="text-muted">Клиент не найден</span>
                    }
                </td>
                <td>
                    @if (item.Service != null)
                    {
                        @item.Service.Name
                    }
                    else
                    {
                        <span class="text-muted">Услуга не найдена</span>
                    }
                </td>
                <td>@item.SaleDate.ToString("dd.MM.yyyy")</td>
                <td>@item.StartDate.ToString("dd.MM.yyyy")</td>
                <td>@item.EndDate.ToString("dd.MM.yyyy")</td>

                <!-- КОЛОНКА: Посещения -->
                <td>
                    <!-- Счётчик посещений -->
                    <span class="badge bg-primary">@(item.Visits?.Count ?? 0)</span>

                    <!-- Кнопка просмотра истории -->
                    <button type="button"
                            class="btn btn-sm btn-outline-info view-history-btn"
                            data-abonnement-id="@item.Id"
                            title="Посмотреть историю посещений">
                        <i class="bi bi-clock-history"></i> История
                    </button>
                </td>

                <td>
                    <!-- Существующая кнопка редактирования -->
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Изменить</a>

                    <!-- НОВАЯ КНОПКА: Отметить посещение -->
                    <button type="button"
                            class="btn btn-sm btn-outline-success mark-visit-btn"
                            data-abonnement-id="@item.Id"
                            title="Отметить посещение клиента">
                        <i class="bi bi-calendar-check"></i> Отметить
                    </button>

                    <!-- Сущеющая форма удаления -->
                    <form asp-action="Delete" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@item.Id"/>
                        <button type="submit" class="btn btn-sm btn-outline-danger"
                                onclick="return confirm('Удалить запись №@item.Id?')">Удалить</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

@section Scripts {
    <!-- Подключаем отдельные JS‑файлы -->
    <script src="~/js/index_abonementSale/toast-notifications.js"></script>
    <script src="~/js/index_abonementSale/visit-management.js"></script>
    <script src="~/js/index_abonementSale/history-modal.js"></script>
    <script src="~/js/index_abonementSale/main-page-init.js"></script>
}
