@model PagedList<AbonnementSale>
@{
    ViewData["Title"] = "Список продаж абонементов";
}

<div class="container mt-4">
    <!-- КОНТЕЙНЕР ДЛЯ ВСПЛЫВАЮЩИХ УВЕДОМЛЕНИЙ -->
    <div aria-live="polite" aria-atomic="true" class="position-fixed bottom-0 end-0 p-3" style="z-index: 1070;">
        <div id="liveToastContainer"></div>
    </div>


    <!-- Генерация уведомлений из TempData -->
    @if (TempData["EditError"] != null)
    {
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                showToast('Ошибка', '@Html.Raw(TempData["EditError"].ToString())', 'danger');
            });
        </script>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                showToast('Успех', '@Html.Raw(TempData["SuccessMessage"].ToString())', 'success');
            });
        </script>
    }

    @if (TempData["WarningMessage"] != null)
    {
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                showToast('Внимание', '@Html.Raw(TempData["WarningMessage"].ToString())', 'warning');
            });
        </script>
    }

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>@ViewData["Title"]</h2>
        @if (!User.IsInRole("User")){
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-person-plus me-1"></i> Новая продажа
        </a>
        }
    </div>

    <!-- Строка поиска -->
    <div class="search-container mb-4">
        <div class="input-group">
            <span class="input-group-text">
                <i class="bi bi-search"></i>
            </span>
            <input type="text"
                   id="searchInput"
                   class="form-control form-control-lg"
                   placeholder="Введите ФИО клиента, название услуги или дату (дд.мм.гггг)..."
                   aria-label="Поиск продаж абонементов"
                   value="@ViewContext.HttpContext.Request.Query["search"]">
        </div>
        <small class="text-dark mt-2">Поиск выполняется автоматически при вводе</small>
    </div>

    <!-- Таблица с продажами -->
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Клиент</th>
            <th>Услуга</th>
            <th>Дата продажи</th>
            <th>Начало действия</th>
            <th>Окончание действия</th>
            <th>Посещения</th>
            <th class="text-end">Действия</th>
        </tr>
        </thead>
        <tbody id="salesTableBody">
        @foreach (var item in Model)
        {
            <tr data-sale-id="@item.Id"
                data-max-visits="@item.MaxVisits"
                data-visit-count="@(item.Visits?.Count ?? 0)">
                <!-- Удалена ячейка с @item.Id -->
                <td>
                    @if (item.Client != null)
                    {
                        <div>
                            @(item.Client.FirstName?.Trim() ?? "") @(item.Client.LastName?.Trim() ?? "")
                        </div>
                    }
                    else
                    {
                        <span class="text-muted">Клиент не найден</span>
                    }
                </td>
                <td>
                    @if (item.Service != null)
                    {
                        @item.Service.Name
                    }
                    else
                    {
                        <span class="text-muted">Услуга не найдена</span>
                    }
                </td>
                <td>@item.SaleDate.ToString("dd.MM.yyyy")</td>
                <td>@item.StartDate.ToString("dd.MM.yyyy")</td>
                <td>@item.EndDate.ToString("dd.MM.yyyy")</td>

                <!-- КОЛОНКА: Посещения -->
                <td>
                    <!-- Счётчик посещений -->
                    <span class="badge bg-primary">@(item.Visits?.Count ?? 0)</span>

                    <!-- Кнопка просмотра истории -->
                    <button type="button"
                            class="btn btn-sm btn-outline-info view-history-btn"
                            data-abonnement-id="@item.Id"
                            data-bs-toggle="modal"
                            data-bs-target="#visitHistoryModal"
                            title="Посмотреть историю посещений">
                        <i class="bi bi-clock-history"></i> История
                    </button>
                </td>

                <td class="text-end">
                    <!-- Существующая кнопка редактирования -->
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary me-1">Редактировать</a>

                    <!-- НОВАЯ КНОПКА: Отметить посещение -->
                    <button type="button"
                            class="btn btn-sm btn-outline-success mark-visit-btn"
                            onclick="markVisitAndRefresh(@item.Id)"
                            data-abonnement-id="@item.Id"
                            title="Отметить посещение клиента">
                        <i class="bi bi-calendar-check"></i> Отметить
                    </button>

                    <!-- Сущеющая форма удаления -->
                    <form asp-action="Delete" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@item.Id"/>
                        <button type="submit" class="btn btn-sm btn-outline-danger"
                                onclick="return confirm('Удалить запись?')">Удалить</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
        <!-- Пагинация в нижнем колонтитуле таблицы -->
        <tfoot>
        <tr>
            <td colspan="7">
                <div class="d-flex justify-content-end align-items-center pt-3">
                    <!-- Информация о странице -->
                    <small class="text-muted me-3">
                        Страница @Model.CurrentPage из @Model.TotalPages
                    </small>

                    <!-- Кнопки навигации (показываются только при возможности перехода) -->
                    @if (Model.HasPreviousPage || Model.HasNextPage)
                    {
                        <nav aria-label="Навигация по страницам">
                            <ul class="pagination mb-0">
                                <!-- Кнопка «Назад» -->
                                @if (Model.HasPreviousPage)
                                {
                                    <li class="page-item">
                                        <a class="page-link"
                                           asp-action="Index"
                                           asp-route-page="@(Model.CurrentPage - 1)"
                                           asp-route-search="@ViewContext.HttpContext.Request.Query["search"]">
                                            <i class="bi bi-arrow-left-short"></i> Назад
                                        </a>
                                    </li>
                                }

                                <!-- Кнопка «Вперёд» -->
                                @if (Model.HasNextPage)
                                {
                                    <li class="page-item">
                                        <a class="page-link"
                                           asp-action="Index"
                                           asp-route-page="@(Model.CurrentPage + 1)"
                                           asp-route-search="@ViewContext.HttpContext.Request.Query["search"]">
                                            Вперёд <i class="bi bi-arrow-right-short"></i>
                                        </a>
                                    </li>
                                }
                            </ul>
                        </nav>
                    }
                </div>
            </td>
        </tr>
        </tfoot>
    </table>

    <!-- Сообщение об отсутствии результатов -->
    <div id="noResultsMessage" class="alert alert-info text-center" style="display:none;">
        Продажи абонементов не найдены по вашему запросу.
    </div>
    
    <div class="pagination-container mt-3">
        <!-- Здесь будет динамическая пагинация при AJAX‑поиске -->
    </div>
</div>

@section Scripts {
    <!-- Подключаем отдельные JS‑файлы -->
    <script src="~/js/index_abonementSale/toast-notifications.js"></script>
    <script src="~/js/index_abonementSale/visit-management.js"></script>
    <script src="~/js/index_abonementSale/history-modal.js"></script>
    <script src="~/js/index_abonementSale/main-page-init.js"></script>
    <script src="~/js/abonementSale-search.js"></script>
}