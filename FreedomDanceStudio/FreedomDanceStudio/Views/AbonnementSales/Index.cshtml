@model IEnumerable<AbonnementSale>
@{
    ViewData["Title"] = "Список продаж абонементов";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>@ViewData["Title"]</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-person-plus me-1"></i> Новая продажа
        </a>
    </div>

    <!-- Таблица с продажами -->
    <table class="table table-striped">
        <thead>
        <tr>
            <th>№</th>
            <th>Клиент</th>
            <th>Услуга</th>
            <th>Дата продажи</th>
            <th>Начало действия</th>
            <th>Окончание действия</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>
                    @if (item.Client != null)
                    {
                        @item.Client.FirstName @item.Client.LastName
                    }
                    else
                    {
                        <span class="text-muted">Клиент не найден</span>
                    }
                </td>
                <td>
                    @if (item.Service != null)
                    {
                        @item.Service.Name
                    }
                    else
                    {
                        <span class="text-muted">Услуга не найдена</span>
                    }
                </td>
                <td>@item.SaleDate.ToString("dd.MM.yyyy")</td>
                <td>@item.StartDate.ToString("dd.MM.yyyy")</td>
                <td>@item.EndDate.ToString("dd.MM.yyyy")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Редактировать</a>
                    <form asp-action="Delete" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@item.Id"/>
                        <button type="submit" class="btn btn-sm btn-outline-danger"
                                onclick="return confirm('Удалить запись №@item.Id?')">Удалить</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
