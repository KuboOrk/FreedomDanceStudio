@model PagedList<Client>
@{
    ViewData["Title"] = "Клиенты студии";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>@ViewData["Title"]</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-person-plus me-1"></i> Добавить клиента
        </a>
    </div>

    <!-- Строка поиска -->
    <div class="search-container mb-4">
        <div class="input-group">
            <span class="input-group-text">
                <i class="bi bi-search"></i>
            </span>
            <input type="text"
                   id="searchInput"
                   class="form-control form-control-lg"
                   placeholder="Введите имя, фамилию, телефон или email..."
                   aria-label="Поиск клиентов"
                   value="@ViewContext.HttpContext.Request.Query["search"]">
        </div>
        <small class="text-dark mt-2">Поиск выполняется автоматически при вводе</small>
    </div>

    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Имя</th>
            <th>Фамилия</th>
            <th>Телефон</th>
            <th>Email</th>
            <th class="text-end">Действия</th>
        </tr>
        </thead>
        <tbody id="clientsTableBody">
        @foreach (var item in Model)
        {
            <tr data-client-id="@item.Id">
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Phone</td>
                <td>@(item.Email ?? "-")</td>
                <td class="text-end">
                    <a asp-action="Edit" asp-route-id="@item.Id"
                       class="btn btn-sm btn-outline-primary me-1">Редактировать</a>
                    <form asp-action="Delete" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@item.Id"/>
                        <button type="submit" class="btn btn-sm btn-outline-danger"
                                onclick="return confirm('Удалить клиента @item.FirstName @item.LastName?')">Удалить</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
        <!-- Пагинация в нижнем колонтитуле таблицы -->
        <tfoot>
        <tr>
            <td colspan="7">
                <div class="d-flex justify-content-end align-items-center pt-3">
                    <!-- Информация о странице -->
                    <small class="text-muted me-3">
                        Страница @Model.CurrentPage из @Model.TotalPages
                    </small>

                    <!-- Кнопки навигации (показываются только при возможности перехода) -->
                    @if (Model.HasPreviousPage || Model.HasNextPage)
                    {
                        <nav aria-label="Навигация по страницам">
                            <ul class="pagination mb-0">
                                <!-- Кнопка «Назад» -->
                                @if (Model.HasPreviousPage)
                                {
                                    <li class="page-item">
                                        <a class="page-link"
                                           asp-action="Index"
                                           asp-route-page="@(Model.CurrentPage - 1)"
                                           asp-route-search="@ViewContext.HttpContext.Request.Query["search"]">
                                            <i class="bi bi-arrow-left-short"></i> Назад
                                        </a>
                                    </li>
                                }

                                <!-- Кнопка «Вперёд» -->
                                @if (Model.HasNextPage)
                                {
                                    <li class="page-item">
                                        <a class="page-link"
                                           asp-action="Index"
                                           asp-route-page="@(Model.CurrentPage + 1)"
                                           asp-route-search="@ViewContext.HttpContext.Request.Query["search"]">
                                            Вперёд <i class="bi bi-arrow-right-short"></i>
                                        </a>
                                    </li>
                                }
                            </ul>
                        </nav>
                    }
                </div>
            </td>
        </tr>
        </tfoot>
    </table>

    <!-- Сообщение об отсутствии результатов -->
    <div id="noResultsMessage" class="alert alert-info text-center mt-3" style="display:none;">
        Клиенты не найдены по вашему запросу.
    </div>
</div>

@section Scripts {
    <script src="~/js/clients-search.js"></script>
}
