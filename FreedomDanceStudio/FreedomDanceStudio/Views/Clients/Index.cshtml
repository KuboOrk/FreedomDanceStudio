@model IEnumerable<FreedomDanceStudio.Models.Client>
@{
    ViewData["Title"] = "Клиенты";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <a asp-action="Create" class="btn btn-primary mb-3">Добавить клиента</a>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>ФИО</th>
            <th>Телефон</th>
            <th>Email</th>
            <th>Дата регистрации</th>
            <th>Статус</th>
            <th>Действия</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FirstName @item.LastName</td>
                <td>@item.Phone</td>
                <td>@item.RegistrationDate.ToString("dd.MM.yyyy")</td>
                <td>
                    @if (item.IsActive)
                    {
                        <span class="badge bg-success">Активен</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Неактивен</span>
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Подробнее</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">Редактировать</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
