@{
    ViewData["Title"] = "Расчёт зарплаты преподавателям";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <!-- Фильтр по периоду -->
    <form method="get" class="mb-4">
        <div class="row">
            <div class="col-md-3">
                <label class="form-label">Начало периода</label>
                <input type="date" name="startDate" class="form-control"
                       value="@(ViewBag.StartDate?.ToString("yyyy-MM-dd") ?? DateTime.Today.AddMonths(-1).ToString("yyyy-MM-dd"))">
            </div>
            <div class="col-md-3">
                <label class="form-label">Конец периода</label>
                <input type="date" name="endDate" class="form-control"
                       value="@(ViewBag.EndDate?.ToString("yyyy-MM-dd") ?? DateTime.Today.ToString("yyyy-MM-dd"))">
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary mt-2">Применить</button>
            </div>
        </div>
    </form>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>Преподаватель</th>
            <th>Ставка за занятие</th>
            <th>Проведено занятий</th>
            <th>Сумма к выплате</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Employee.FullName</td>
                <td>@item.Employee.SalaryRate.ToString("N2")</td>
                <td>@item.LessonCount</td>
                <td><strong>@item.TotalAmount.ToString("N2")</strong></td>
            </tr>
        }
        </tbody>
    </table>
</div>
