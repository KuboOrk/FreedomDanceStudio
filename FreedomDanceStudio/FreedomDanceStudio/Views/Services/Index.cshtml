@model IEnumerable<FreedomDanceStudio.Models.Service>
@{
    ViewData["Title"] = "Типы абонементов";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <a asp-action="Create" class="btn btn-primary mb-3">Добавить абонемент</a>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
        <tr>
            <th>Название</th>
            <th>Цена (руб.)</th>
            <th>Срок действия (дни)</th>
            <th>Статус</th>
            <th>Действия</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price.ToString("N2")</td>
                <td>@item.DurationDays</td>
                <td>
                    @if (item.IsActive)
                    {
                        <span class="badge bg-success">Активен</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Неактивен</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">Редактировать</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Удалить</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
