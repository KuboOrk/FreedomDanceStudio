@model IEnumerable<Service>
@{
    ViewData["Title"] = "Типы абонементов";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>@ViewData["Title"]</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i> Добавить услугу
        </a>
    </div>

    <!-- Строка поиска -->
    <div class="search-container mb-4">
        <div class="input-group">
            <span class="input-group-text">
                <i class="bi bi-search"></i>
            </span>
            <input type="text"
                   id="searchInput"
                   class="form-control form-control-lg"
                   placeholder="Введите название или описание абонемента..."
                   aria-label="Поиск абонементов">
        </div>
        <small class="text-muted mt-2">Поиск выполняется автоматически при вводе</small>
    </div>

    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Название</th>
            <th>Описание</th>
            <th>Цена (₽)</th>
            <th>Срок (дни)</th>
            <th class="text-end">Действия</th>
        </tr>
        </thead>
        <tbody id="servicesTableBody">
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@(item.Description ?? "-")</td>
                <td>@item.Price</td>
                <td>@item.DurationDays</td>
                <td class="text-end">
                    <a asp-action="Edit" asp-route-id="@item.Id"
                       class="btn btn-sm btn-outline-primary me-1">Редактировать</a>
                    <form asp-action="Delete" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@item.Id"/>
                        <button type="submit" class="btn btn-sm btn-outline-danger"
                                onclick="return confirm('Удалить услугу @item.Name?')">Удалить</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>

    <!-- Сообщение об отсутствии результатов -->
    <div id="noResultsMessage" class="alert alert-info text-center" style="display:none;">
        Абонементы не найдены по вашему запросу.
    </div>
</div>

@section Scripts {
    <script src="~/js/services-search.js"></script>
}