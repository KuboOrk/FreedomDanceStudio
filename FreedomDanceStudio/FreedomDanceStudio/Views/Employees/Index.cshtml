@model IEnumerable<FreedomDanceStudio.Models.Employee>
@{
    ViewData["Title"] = "Сотрудники";
}


<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <a asp-action="Create" class="btn btn-primary mb-3">Добавить сотрудника</a>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>ФИО</th>
            <th>Телефон</th>
            <th>Email</th>
            <th>Ставка за занятие</th>
            <th>Статус</th>
            <th>Действия</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FirstName @item.LastName</td>
                <td>@item.Phone</td>
                <td>@item.SalaryRate.ToString("N2")</td>
                <td>
                    @if (item.IsActive)
                    {
                        <span class="badge bg-success">Активен</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Неактивен</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">Редактировать</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Удалить</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
