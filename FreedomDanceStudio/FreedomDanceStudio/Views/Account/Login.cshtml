@model FreedomDanceStudio.Models.User
@{
    ViewData["Title"] = "Вход в FREEDOM Dance";
    Layout = null;
}
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Иконки -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <!-- Наши стили -->
    <link rel="stylesheet" href="~/css/site.css"/>
</head>
<body class="auth-body">

<!-- Подключение компонента лоадера -->
@await Html.PartialAsync("_Loader")

<div class="auth-container" id="loginForm" style="display: none;">
    <div class="auth-card">
        <div class="auth-header">
            <h2 class="auth-title">FREEDOM<span>Dance</span></h2>
            <p class="auth-subtitle">Студия современного танца</p>
        </div>

        <h3 class="text-center mb-4">Вход в систему</h3>


        <!-- Добавлен id и novalidate -->
        <form method="post" asp-action="Login" id="loginForm" class="auth-form active" novalidate asp-antiforgery="true">
            <div class="form-group">
                <label for="username" class="form-label">Логин</label>
                <input type="text" id="username" name="username"
                       class="form-control auth-input" placeholder="Введите логин" required />
                <!-- Сообщение об ошибке -->
                <div class="invalid-feedback">
                    Пожалуйста, введите логин
                </div>
            </div>

            <div class="form-group">
                <label for="password" class="form-label">Пароль</label>
                <div class="input-group auth-input-group">
                    <input type="password" id="password" name="password"
                           class="form-control auth-input" 
                           placeholder="Введите пароль" required />
                    <button type="button" class="btn btn-outline-secondary show-password-btn" aria-label="Показать пароль">
                        <i class="bi bi-eye"></i>
                    </button>
                </div>
                <div class="invalid-feedback">
                    Пожалуйста, введите пароль
                </div>
            </div>

            <button type="submit" class="btn btn-primary auth-btn w-100">
                Войти
            </button>

            @if (!ViewContext.ModelState.IsValid)
            {
                <div class="alert alert-danger mt-3">
                    @foreach (var modelError in ViewContext.ModelState.SelectMany(x => x.Value?.Errors))
                    {
                        <div>@modelError.ErrorMessage</div>
                    }
                </div>
            }
        </form>

        <div class="text-center mt-3">
            <a asp-action="Register" class="text-muted">Нет аккаунта? Зарегистрируйтесь</a>
        </div>
    </div>
</div>

<!-- Скрипты -->
<script src="~/js/auth.js"></script>
<!-- Скрипт лоадера -->
<script src="~/js/loader.js"></script>
</body>
</html>
