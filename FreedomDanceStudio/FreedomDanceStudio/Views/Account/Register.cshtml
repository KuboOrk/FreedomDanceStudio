@model FreedomDanceStudio.Models.User
@{
    ViewData["Title"] = "Регистрация в FREEDOM Dance";
    Layout = null;
}
<!DOCTYPE html>
<html lang="ru">
<head>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>@ViewData["Title"]</title>


<!-- Bootstrap 5 -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<!-- Иконки -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <!-- Наши стили -->
    <link rel="stylesheet" href="~/css/site.css"/>
</head>
<body class="auth-body">
<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h2 class="auth-title">FREEDOM<span>Dance</span></h2>
            <p class="auth-subtitle">Студия современного танца</p>
        </div>

        <h3 class="text-center mb-4">Регистрация</h3>

        <!-- Добавлен id и novalidate -->
        <form method="post" asp-controller="Account" asp-action="Register" 
              id="registerForm" class="auth-form active" novalidate>
            <div class="form-group">
                <label for="regUsername" class="form-label">Логин</label>
                <input type="text" id="regUsername" name="Username"
                       class="form-control auth-input" placeholder="Придумайте логин" required />
                <div class="invalid-feedback">
                    Логин обязателен
                </div>
            </div>

            <div class="form-group">
                <label for="regPassword" class="form-label">Пароль</label>
                <div class="input-group auth-input-group">
                    <input type="password" id="regPassword" name="PasswordHash"
                           class="form-control auth-input"
                           placeholder="Придумайте пароль" required />
                    <button type="button" class="btn btn-outline-secondary show-password-btn" aria-label="Показать пароль">
                        <i class="bi bi-eye"></i>
                        <i class="bi bi-eye-slash" style="display: none;"></i>
                    </button>
                </div>
                <div class="invalid-feedback">
                    Пароль обязателен
                </div>
            </div>

            <div class="form-group">
                <label for="confirmPassword" class="form-label">Подтвердите пароль</label>
                <div class="input-group auth-input-group">
                    <input type="password" id="confirmPassword" name="confirmPassword"
                           class="form-control auth-input"
                           placeholder="Повторите пароль" required />
                    <button type="button" class="btn btn-outline-secondary show-password-btn" aria-label="Показать подтверждённый пароль">
                        <i class="bi bi-eye"></i>
                        <i class="bi bi-eye-slash" style="display: none;"></i>
                    </button>
                </div>
                <div class="invalid-feedback" id="confirmPasswordError">
                    Пароли должны совпадать
                </div>
            </div>

            <div class="form-group">
                <label for="firstName" class="form-label">Имя</label>
                <input type="text" id="firstName" name="FirstName"
                       class="form-control auth-input" placeholder="Ваше имя" />
            </div>

            <div class="form-group">
                <label for="lastName" class="form-label">Фамилия</label>
                <input type="text" id="lastName" name="LastName"
                       class="form-control auth-input" placeholder="Ваша фамилия" />
            </div>

            <div class="form-group">
                <label for="email" class="form-label">Email</label>
                <input type="email" 
                       id="email"
                       name="Email"
                       class="form-control auth-input"
                       placeholder="Ваш email"
                       pattern="@Html.Raw("[a-z0-9._%+-]+@[a-z0-9.-]+\\.[a-z]{2,}$")"
                       required />
                <div class="invalid-feedback">
                    Введите корректный email
                </div>
            </div>

            <div class="form-group">
                <label for="phone" class="form-label">Телефон</label>
                <input type="tel" id="phone" name="Phone"
                       class="form-control auth-input" placeholder="+7 (XXX) XXX-XX-XX" 
                       data-mask="+7 (XXX) XXX-XX-XX" maxlength="17"/>
            </div>

            <button type="submit" class="btn btn-success auth-btn w-100">
                Зарегистрироваться
            </button>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger mt-3">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <div>@error.ErrorMessage</div>
                    }
                </div>
            }
        </form>

        <div class="text-center mt-3">
            <a asp-controller="Account" asp-action="Login" class="text-muted">Уже есть аккаунт? Войдите</a>
        </div>
    </div>
</div>

<script src="~/js/auth.js"></script>
</body>
</html>