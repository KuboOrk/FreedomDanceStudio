@{
    ViewData["Title"] = "Главная";
}

<!-- 1. Главная секция -->
<div class="section gradient-bg text-white text-center py-0" id="home">
    <div class="container position-relative">
        <!-- Слайдер (фон) -->
        <div class="section" id="slider">
            <div class="container">
                <div class="simple-slider">
                    <div class="slide">
                        <img src="~/Content/slider/4.jpg" alt="Слайд 4">
                    </div>
                    <div class="slide">
                        <img src="~/Content/slider/5.jpg" alt="Слайд 5">
                    </div>
                </div>
            </div>
        </div>
        <!-- Текстовый контент (на переднем плане) -->
        <div style="z-index: 1; position: relative;">
            <div class="text-container">
                <h1 class="display-4 mb-4">Добро пожаловать в FREEDOM!</h1>
                <p class="lead mb-5">Танцуй с удовольствием!</p>
                <a href="#directions" class="btn btn-outline-light btn-lg pulse-btn">Узнать о направлениях</a>
            </div>
        </div>
    </div>
</div>

<!-- 3. Направления -->
<div id="directions" class="section">
    <div class="container">
        <h2 class="text-center mb-5 fw-bold">Наши направления</h2>
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card h-100 fade-in">
                    <img src="~/Content/directions/Восточные танцы.jpg" class="card-img-top" alt="Восточные танцы">
                    <div class="card-body">
                        <h5 class="card-title">Восточные танцы</h5>
                        <p class="card-text">Завораживающие движения, женственность и сила.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100 fade-in">
                    <img src="~/Content/directions/Бачата.jpg" class="card-img-top" alt="Бачата">
                    <div class="card-body">
                        <h5 class="card-title">Бачата</h5>
                        <p class="card-text">Зажигательные ритмы, энергия и радость общения.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100 fade-in">
                    <img src="~/Content/directions/Детские восточные танцы.png" 
                         class="card-img-top" alt="Детские восточные танцы (спортивная группа)">
                    <div class="card-body">
                        <h5 class="card-title">Детские восточные танцы (спортивная группа)</h5>
                        <p class="card-text">Гибкость, координация, командный дух.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100 fade-in">
                    <img src="~/Content/directions/Современные танцы 10+.jpg" class="card-img-top" alt="Современные танцы 10+">
                    <div class="card-body">
                        <h5 class="card-title">Современные танцы 10+ </h5>
                        <p class="card-text">Модно и молодежно</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- 4. О студии -->
<div id="about" class="section bg-light">
    <div class="container position-relative">
        <!-- Фоновое изображение (занимает весь контейнер) -->
        <div class="about-background">
            <img src="~/Content/about/4.jpg" alt="Студия">
        </div>

        <!-- Текстовый контент (поверх изображения) -->
        <div class="about-content">
            <div class="row">
                <div class="col-md-6">
                    <h2 class="typing-animation">
                        <span class="phrase" data-text="FREEDOM всегда в тренде"></span>
                        <span class="phrase" data-text='Будь в тренде'></span>
                    </h2>

                    <div class="italic-text">
                        У нас вы найдёте:
                        <ul>
                            <li>Профессиональных преподавателей с огромным опытом</li>
                            <li>Разнообразные стили танцев: от современных до классических</li>
                            <li>Уютную атмосферу и дружелюбный коллектив</li>
                            <li>Гибкий график занятий для вашего удобства</li>
                        </ul>
                    </div>

                    <div class="italic-text">
                        Почему "Freedom"?
                        <ul>
                            <li>Мы верим, что танец — это свобода и самовыражение</li>
                            <li>У нас каждый найдёт свой стиль и ритм</li>
                            <li>Мы создаём условия для вашего роста и развития</li>
                        </ul>
                    </div>

                    <p class="italic-text">Присоединяйтесь к нам и начните свой танцевальный путь уже сегодня!</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- 5. Прайс (картинка) -->
<div id="price" class="section">
    <div class="container">
        <h2 class="text-center mb-5 fw-bold">Цены на занятия</h2>
        <div class="row justify-content-center">
            <div class="col-md-10">
                <img 
                    src="~/Content/price/Прайс-лист.png" 
                    alt="Цены на занятия в студии FREEDOM"
                    class="img-fluid rounded shadow-sm price-image"
                />
            </div>
        </div>
    </div>
</div>



<!-- 6. Расписание (картинка) -->
<div id="schedule" class="section">
    <div class="container">
        <h2 class="text-center mb-5 fw-bold">Расписание занятий</h2>
        <div class="row justify-content-center">
            <div class="col-md-10">
                <!-- Картинка с расписанием -->
                <img 
                    src="~/Content/schedule/Расписание занятий.png"
                    alt="Расписание занятий студии FREEDOM"
                    class="img-fluid rounded shadow-sm"
                />
            </div>
        </div>
    </div>
</div>

